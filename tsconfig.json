{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2021",
        "esModuleInterop": true,
        "outDir": "./dist",
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "*.d.ts",
        "./src/**/*.ts"
    ]
}
