{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2021",
        "esModuleInterop": true,
        "outDir": "./dist",
        "removeComments": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node"
    },
    "typeRoots": ["./node_modules/@types"],
    "include": ["@types/**/*.d.ts", "types/*.ts", "src/*.ts"]
}
