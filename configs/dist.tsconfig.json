{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2021",
        "esModuleInterop": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "./"
    },
    "include": [
        "*.d.ts",
        "./src/**/*.ts"
    ]
}